{
  "manifest_version": 2,

  "name": "FB Event to gCal Event",
  "description": "Imports facebook events into google calendar.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "background",
    "https://www.facebook.com/", 
    "http://www.facebook.com/",
    "http://*.google.com/", 
    "https://*.google.com/"
  ],
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "FBgCal"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent":false
  }
}